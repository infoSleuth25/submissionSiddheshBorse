<h1 class="heading">Retrieve Your Notes Here !</h1>

<table id="datalist">

</table>

<script>
        const getData= async ()=>{
            let resp = await fetch ("/api/NoteHistory",{method:"GET"});
            let data = await resp.json();
          
            let history = data.response;
            console.log(history);
            let list = ``;
            list += `<tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    </tr> `
            history.forEach((e)=>{
                list += `<tr>
                    <td>${e.title}</td>
                    <td>${e.content}</td>
                    <td> ${e.createdAt}</td>
                    <td> ${e.updatedAt}</td>
                    </tr>
                    `
            })
            document.getElementById('datalist').innerHTML = list;
            console.log(data);
        }
        getData();
    </script>

